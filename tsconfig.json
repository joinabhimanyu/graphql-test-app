{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop":true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom",
      "esnext"
    ],
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "typings/*.d.ts"
, "src/server.js", "src/schema.js", "src/resolvers.js", "src/index.js"  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}